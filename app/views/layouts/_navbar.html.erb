<div class="navbar-my">
   <div class="logo-area">
    <%= link_to root_path do %>
      <i class="fas fa-cocktail"></i>
    <% end %>
    <span class="page-name">
      Cocktail <span class="page-name-right-part">'n' Mix</span>
    </span>
  </div>

<!-- Right part of navbar -->
  <div class="navbar-right-part">
    <ul class="navbar-nav mr-auto list-inline">
      <% if user_signed_in? %>

      <!-- navigation if user is signed in -->
        <li class="nav-item list-inline-item collapse-small">
          <%= link_to "Create Cocktail", new_cocktail_path %>
        </li>
        <li class="nav-item list-inline-item collapse-small">
          <%= link_to "Favorites", favorites_path %>
        </li>
        <li class="nav-item list-inline-item collapse-small">
          <%= link_to "My Cocktails", my_path %>
        </li>
        <li class="nav-item list-inline-item dropdown">
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, class: "avatar avatar-small avatar-round dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup' => true, 'aria-expanded' => false %>
          <% else %>
            <%= image_tag("https://cdn.pixabay.com/photo/2016/09/01/08/24/smiley-1635449_960_720.png", class: "avatar avatar-small avatar-round dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup' => true, 'aria-expanded' => false)  %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <!-- add for small devises -->
            <%= link_to "Create Cocktail", new_cocktail_path, class: "dropdown-item collapse-big" %>
            <%= link_to "Favorites", favorites_path, class: "dropdown-item collapse-big" %>
            <%= link_to "My Cocktails", my_path, class: "dropdown-item collapse-big" %>
            <%= link_to "Account", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>

          </div>
      </li>

      <% else %>

      <!-- navigation if user is not signed in -->
        <!-- big devises -->
        <li class="list-inline-item collapse-small">
          <%= link_to "Create Cocktail", new_cocktail_path %>
        </li>
        <li class="list-inline-item collapse-small">
          <%= link_to "Login", new_user_session_path %>
        </li>
        <li class="list-inline-item collapse-small">
          <%= link_to "Signup", new_user_registration_path %>
        </li>

        <!-- small devices -->
        <li class="nav-item list-inline-item dropdown">
          <i class="fas fa-bars" id="navbar-burger" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Create Cocktail", new_cocktail_path, class:"dropdown-item" %>
            <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "Signup", new_user_registration_path, class: "dropdown-item" %>
          </div>
      </li>

      <% end %>
    </ul>
  </div>
</div>
