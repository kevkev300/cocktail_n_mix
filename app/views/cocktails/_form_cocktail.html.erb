<%= simple_form_for (@cocktail) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :photos,
                as: :file,
                input_html: { multiple: true },
                hint: "You can upload multiple photos of the cocktail."
  %>
    <div class="form-button">
      <%= f.button :submit, "Create the cocktail!", class: "btn-base btn-main form-button" %>
    </div>
  </div>
<% end %>
