<h1>This is Cocktail 'n' Mix!</h1>

<div class="card-cocktail">
  <div class="card-cocktail-photo-area">
    <div class="card-cocktail-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(http://res.cloudinary.com/kl3000/image/upload/<%= @cocktails.first.photos.first.key %>)">
      <%= @cocktails.first.name.capitalize! %>
    </div>
    <%= cl_image_tag @cocktails.first.user.avatar.key, class: "card-cocktail-user avatar avatar-large avatar-round avatar-bordered" %>
  </div>
  <div class="card-cocktail-infos">
    <div>
      <p>Favorited by: <%= @cocktails.first.favorites.count %></p>
    </div>
    <div class="favorited">
      <i class="far fa-heart"></i>
      <i class="fas fa-heart d-none"></i>
    </div>
</div>
